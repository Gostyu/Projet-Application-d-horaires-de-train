<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.JourneyFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:id="@+id/bloc1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="25dp"
        >
        <AutoCompleteTextView
            android:id="@+id/editText_trajet1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/editText_trajet1"
            android:inputType="text"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="40dp"
            android:layout_above="@id/editText_trajet2"
            android:padding="20dp"
            android:textColor="@color/colorDark"
            android:background="@drawable/rounded_edittext"
            />
        <AutoCompleteTextView
            android:id="@+id/editText_trajet2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/editText_trajet2"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:dropDownAnchor="@id/bloc1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:padding="20dp"
            android:textColor="@color/colorDark"
            android:background="@drawable/rounded_edittext"

            ></AutoCompleteTextView>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_trajet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:visibility="gone"
        android:layout_below="@id/bloc1"
        />
</RelativeLayout>

